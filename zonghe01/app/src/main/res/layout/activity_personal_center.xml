<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightcyan">
    <TextView android:id="@+id/tv_personal_center1"
        android:text="个人中心"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/dodgerblue"/>
    <ImageView
        android:id="@+id/iv_user_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/transparent"
        android:layout_below="@id/tv_personal_center1"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/ic_touxiang"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tv_student_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_personal_center1"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_marginStart="135dp"
        android:layout_marginLeft="135dp"/>
    <TextView
        android:id="@+id/tv_stu_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_student_number"
        android:textSize="18sp"
        android:text="用户"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_marginStart="135dp"
        android:layout_marginLeft="135dp"/>
    <ImageView
        android:id="@+id/iv_user_info"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/iv_user_photo"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/ic_baseline_message_24"
        android:layout_marginStart="20dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="20dp" />
    <Button
        android:id="@+id/btn_user_info"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:text="个人信息"
        android:textSize="20sp"
        android:layout_below="@+id/iv_user_photo"
        android:layout_marginTop="5dp"
        android:background="@color/lightskyblue"
        android:layout_marginLeft="80dp" />
    <ImageView
        android:id="@+id/iv_my_goods"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/iv_user_info"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ic_publish_03"
        android:layout_marginStart="20dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="20dp" />
    <Button
        android:id="@+id/btn_my_goods"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:text="我的发布"
        android:textSize="20sp"
        android:layout_below="@+id/btn_user_info"
        android:layout_marginTop="10dp"
        android:background="@color/lightskyblue"
        android:layout_marginLeft="80dp" />
    <ImageView
        android:id="@+id/iv_my_collection"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/iv_my_goods"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ic_collection_01"
        android:layout_marginStart="20dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="20dp" />
    <Button
        android:id="@+id/btn_my_collection"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:text="我的收藏"
        android:textSize="20sp"
        android:layout_below="@+id/btn_my_goods"
        android:layout_marginTop="10dp"
        android:background="@color/lightskyblue"
        android:layout_marginLeft="80dp" />
    <ImageView
        android:id="@+id/iv_modify_password"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/iv_my_collection"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ic_pwd_01"
        android:layout_marginStart="20dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="20dp" />
    <Button
        android:id="@+id/btn_modify_password"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:text="修改密码"
        android:textSize="20sp"
        android:layout_below="@+id/btn_my_collection"
        android:layout_marginTop="10dp"
        android:background="@color/lightskyblue"
        android:layout_marginLeft="80dp" />
    <ImageView
        android:id="@+id/iv_about_app"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/iv_modify_password"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ic_about_app_24"
        android:layout_marginStart="20dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="20dp" />
    <Button
        android:id="@+id/btn_about_app"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:text="关于系统"
        android:textSize="20sp"
        android:layout_below="@+id/btn_modify_password"
        android:layout_marginTop="10dp"
        android:background="@color/lightskyblue"
        android:layout_marginLeft="80dp" />
    <ImageView
        android:id="@+id/iv_logout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/iv_about_app"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ic_back_01"
        android:layout_marginStart="20dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="20dp" />
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:text="退出登录"
        android:textSize="20sp"
        android:layout_below="@+id/btn_about_app"
        android:layout_marginTop="10dp"
        android:background="@color/lightskyblue"
        android:layout_marginLeft="80dp" />
    <Button
        android:id="@+id/btn_back"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="返回"
        android:textSize="20sp"
        android:background="@color/dodgerblue"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="135dp"
        android:layout_marginLeft="135dp" />

</RelativeLayout>