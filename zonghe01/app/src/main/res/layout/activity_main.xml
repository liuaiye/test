<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_title"
        android:text="二手交易平台"
        android:textSize="40sp"
        android:textColor="@color/red_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:background="@color/transparent"/>
    <TextView
        android:id="@+id/tv_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刷新"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:textColor="@color/mediumturquoise"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/tv_student_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:textStyle="italic"
        android:layout_marginBottom="4dp"/>
    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_student_number"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ib_learning_use"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_img_xuexi01"
            android:scaleType="centerCrop"
            android:background="@color/transparent" />
        <ImageButton
            android:id="@+id/ib_electric_product"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_img_dianzi01"
            android:scaleType="centerCrop"
            android:background="@color/transparent" />
        <ImageButton
            android:id="@+id/ib_daily_use"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_img_shenghuo01"
            android:scaleType="centerCrop"
            android:background="@color/transparent" />
        <ImageButton
            android:id="@+id/ib_sports_good"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_img_tiyu01"
            android:scaleType="centerCrop"
            android:background="@color/transparent"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_learning_use"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="学习用品"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@+id/ll_btn"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp" />
    <TextView
        android:id="@+id/tv_electric_product"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="电子用品"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@+id/ll_btn"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp" />
    <TextView
        android:id="@+id/tv_daily_use"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="生活用品"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/ll_btn"
        android:layout_marginStart="205dp"
        android:layout_marginLeft="205dp" />
    <TextView
        android:id="@+id/tv_sports_good"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:text="体育用品"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/ll_btn"
        android:layout_marginStart="290dp"
        android:layout_marginLeft="300dp" />
    <ListView
        android:id="@+id/lv_all_commodity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_electric_product"
        android:layout_marginTop="4dp"
        android:layout_above="@+id/view2"/>

    <View android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/view2"
        android:background="@color/dodgerblue"
        android:layout_marginTop="60dp"/>
    <ImageButton
        android:id="@+id/ib_home_page"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_home_page"
        app:srcCompat="@drawable/ic_home_24"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp" />
    <View android:id="@+id/view2"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="130dp"
        android:background="@color/dodgerblue"
        android:layout_marginLeft="130dp" />
    <ImageButton
        android:id="@+id/ib_add_product"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_add_product"
        app:srcCompat="@drawable/ic_add_24"
        android:layout_marginStart="180dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="180dp" />
    <View android:id="@+id/view3"
        android:layout_above="@+id/view4"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:background="@color/dodgerblue"
        android:layout_marginStart="270dp"
        android:layout_marginLeft="270dp" />
    <ImageButton
        android:id="@+id/ib_personal_center"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_personal_center"
        app:srcCompat="@drawable/ic_person_24"
        android:layout_marginStart="310dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="300dp" />
    <TextView
        android:id="@+id/tv_home_page"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:text="首页"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_above="@+id/view4"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="50dp" />
    <TextView
        android:id="@+id/tv_add_product"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="发布闲置"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="165dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="165dp" />
    <TextView
        android:id="@+id/tv_personal_center"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="个人中心"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_above="@+id/view4"
        android:layout_marginStart="295dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="290dp" />
    <View android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/dodgerblue"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>