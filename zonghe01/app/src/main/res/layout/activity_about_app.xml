<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView android:id="@+id/tv_about_app"
        android:text="系统简介"
        android:textSize="40sp"
        android:background="@color/deepskyblue"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tv_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开发目的:"
        android:textSize="30sp"
        android:layout_below="@id/tv_about_app"
        android:layout_marginTop="10dp"
        android:textColor="@color/orangered"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp" />
    <TextView
        android:id="@+id/tv_goal_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="该app致力于在所有范围内搭建一个二手商品交易系统,主要包含四类物品的交易,安全性较高,支持面对面交易,极大的便利了人们的生活。"
        android:layout_below="@id/tv_goal"
        android:textSize="22sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开发人员:"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_goal_content"
        android:textColor="@color/olivedrab"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp" />
    <TextView
        android:id="@+id/tv_developer_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1800300303 刘娜       1600300819黄中才  18003003刘秋星"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_developer"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp" />
    <TextView
        android:id="@+id/tv_college"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(计算机与信息安全学院/物联网工程专业)"
        android:textSize="18sp"
        android:layout_below="@id/tv_developer_nickname"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp" />
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统版本:"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_college"
        android:textColor="@color/cornflowerblue"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android app1.0"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_version"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/btn_back"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="返回"
        android:textSize="20sp"
        android:background="@color/deepskyblue"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="135dp"
        android:layout_marginLeft="135dp" />

</RelativeLayout>