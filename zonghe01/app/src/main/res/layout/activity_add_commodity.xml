<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_publish_info"
        android:text="发布商品"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/dodgerblue"/>
    <TextView
        android:id="@+id/tv_student_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_publish_info"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal" />
    <TextView
        android:id="@+id/tv_add_photo"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="添加照片"
        android:textSize="22sp"
        android:layout_below="@+id/tv_student_id"
        android:layout_marginStart="7dp"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="7dp" />
    <ImageButton
        android:id="@+id/iv_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/ic_baseline_insert_photo_24"
        android:scaleType="centerCrop"
        android:layout_below="@+id/tv_student_id"
        android:layout_marginTop="10dp"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="标题"
        android:textSize="22sp"
        android:layout_below="@+id/iv_photo"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp" />
    <EditText
        android:id="@+id/et_title"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_photo"
        android:layout_marginTop="20dp"
        android:layout_marginStart="105dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:hint="请输入标题"
        android:textSize="18sp"
        android:layout_marginLeft="105dp" />
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="类别"
        android:textSize="22sp"
        android:layout_below="@+id/tv_title"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp" />
    <Spinner
        android:id="@+id/spn_type"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="105dp"
        android:entries="@array/product_type"
        android:layout_marginLeft="105dp" />
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="价格"
        android:textSize="22sp"
        android:layout_below="@+id/tv_type"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp" />
    <EditText
        android:id="@+id/et_price"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/spn_type"
        android:layout_marginTop="20dp"
        android:layout_marginStart="105dp"
        android:textColor="@color/red"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:hint="请输入价格"
        android:textSize="18sp"
        android:layout_marginLeft="105dp" />
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="联系方式"
        android:textSize="22sp"
        android:layout_below="@+id/tv_price"
        android:layout_marginStart="7dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="7dp" />
    <EditText
        android:id="@+id/et_phone"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_price"
        android:layout_marginTop="20dp"
        android:layout_marginStart="105dp"
        android:textColor="@color/black"
        android:inputType="phone"
        android:maxLines="1"
        android:hint="请输入联系方式"
        android:textSize="18sp"
        android:layout_marginLeft="105dp" />
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="描述"
        android:textSize="22sp"
        android:layout_below="@+id/tv_phone"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp" />
    <EditText
        android:id="@+id/et_description"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_phone"
        android:layout_marginTop="20dp"
        android:layout_marginStart="105dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:textSize="18sp"
        android:hint="请输入简要概述"
        android:layout_marginLeft="105dp" />
    <Button
        android:id="@+id/btn_publish"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_description"
        android:text="发布"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:background="@color/dodgerblue"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"/>
    <Button
        android:id="@+id/btn_back"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_description"
        android:text="返回"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:background="@color/gray"
        android:layout_marginStart="205dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="205dp"
        android:layout_marginRight="10dp" />
</RelativeLayout>